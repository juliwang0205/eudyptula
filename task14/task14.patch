+static ssize_t eudytpula_id_read(struct file *file, char __user *buf,
+                size_t count, loff_t *ppos)
+{
+        struct task_struct *task = get_proc_task(file_inode(file));
+		
+        int len;
+        char id[18];
+        int retval = -EINVAL;
+
+        if (!task)
+                goto out_notask;
+
+	if (*ppos != 0) {
+		retval = 0;
+		goto out;
+	}
+	
+        len = sprintf(id, "%llx\n", task->id);
+        if (copy_to_user(buf, id, 18))
+                goto out;
+
+        task->id ++;
+        *ppos += len;
+        retval = len;
+out:
+        put_task_struct(task);
+out_notask:
+        return retval;
+}
+
